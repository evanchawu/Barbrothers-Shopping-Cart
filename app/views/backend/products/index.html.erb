<h1>商品列表</h1>

<%= link_to '新增', new_backend_product_path, class:'btn btn-success' %>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>商品圖片</td>
      <td>售價</td>
      <td>是否上線</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= image_tag(product.image.small) %></td>
      <td><%= product.price %></td>
      <td><%= product_status(product) %></td>
        <td>
          <%= edit_button(edit_backend_product_path(product)) %>
          <%= delete_button(backend_product_path(product)) %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @products, theme: 'twitter-bootstrap-3' %>
